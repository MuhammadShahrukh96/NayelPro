    <script type="text/javascript">

        $(document).ready(function () {

            loadOrganizations();
            var user = localStorage.getItem("user");
            if (user) {
                $("#username").html(JSON.parse(user).userName);
            } else {
                // window.location.href = "@Url.Action("Index", "Login")";
            }

        });

        function logout() {
            localStorage.removeItem("user");
            window.location.href = "@Url.Action("Index", "Login")";
        }

        function loadOrganizations() {
            $.ajax({
                type: "GET",
                url: "/organization/GetAll",
                dataType: "json",
                success: function (data) {

                    if (data) {
                        var sel = $("#ddlOrg");
                        sel.empty();
                        for (var i = 0; i < data.length; i++) {
                            sel.append('<option value="' + data[i].organizationId + '">' + data[i].organizationName + '</option>');
                        }
                    }

                    var selectedOrg =  localStorage.getItem("selectedOrg");
                    if (selectedOrg == null) {
                        localStorage.setItem("selectedOrg", data[0].organizationId);
                    } else {
                        $("#ddlOrg").val(selectedOrg);
                    }



                },
                error(err) {
                    console.log(err);
                }
            });

        }

        function changeOrg() {
            var id = $("#ddlOrg").val();
            localStorage.setItem("selectedOrg", id);
            location.reload();
        }

    </script>

